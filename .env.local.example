# === ApeChain settings ===
NEXT_PUBLIC_CHAIN_ID=33139
NEXT_PUBLIC_CHAIN_NAME="ApeChain"
# Public RPC endpoint; you can replace with a provider (dRPC, Ankr, Alchemy if available)
RPC_URL="https://apechain.calderachain.xyz/http"
NEXT_PUBLIC_EXPLORER_URL="https://apechain.calderaexplorer.xyz"
# Currency symbol shown in UI (ApeChain native gas token is APE)
NEXT_PUBLIC_SYMBOL="APE"

# === Business settings ===
# Address that receives payments (your ApeChain wallet address)
NEXT_PUBLIC_RECIPIENT_ADDRESS="0xYourWalletAddress"

# Optional: Restrict to specific ERC-721 collections (comma-separated addresses, lowercase)
ALLOWED_COLLECTIONS="0xcollection1,0xcollection2"
